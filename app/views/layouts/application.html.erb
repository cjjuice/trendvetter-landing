<!DOCTYPE html>
<html>
<head>
  <title>TrendVetter</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<header id="top">
  <div id="top-inner">
    <div id="logo">
      <%= image_tag "logo.png" %>
    </div>
  </div>  
</header>
<body>
  <div class="container">
    <% flash.each do |name, msg| %>
		  <div class="alert alert-<%= name == :notice ? "success" : "error" %>" style="font-size: 16px;">
		    <a class="close" data-dismiss="alert">Ã—</a>
		    <%= msg %>
		  </div>
		<% end %>
    <%= yield %>
  </div>
</body>
</html>
